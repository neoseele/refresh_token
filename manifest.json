{
  "name": "Token Refresher",
  "description": "Reload tabs with refreshed token",
  "version": "2.0.3",
  "minimum_chrome_version": "16.0.884",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "<all_urls>"
  ],
  "browser_action": {
    "default_name": "Refresh Token",
    "default_popup": "popup.html"
  },
  "background":{
    "scripts":[
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "image/notice.png"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://google-admin.corp.google.com/*"
      ],
      "js": [
        "js/alarms.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
